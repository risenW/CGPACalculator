<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gpa_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afridevelopers.cgpacalculator.GpaList"
    android:background="@drawable/developed">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Headers"
        android:background="@android:color/background_dark"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="@dimen/GpaListViewWidth"
            android:layout_height="@dimen/GpaListViewHeight"
            android:id="@+id/nameHeader"
            style="@style/GpaListView"
            android:text="Name"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="@dimen/GpaListViewWidth"
            android:layout_height="@dimen/GpaListViewHeight"
            android:id="@+id/sessionHeader"
            style="@style/GpaListView"
            android:text="Session"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="@dimen/GpaListViewWidth"
            android:layout_height="@dimen/GpaListViewHeight"
            android:id="@+id/gpaScore"
            style="@style/GpaListView"
            android:layout_weight="1"
            android:text="GPA"
            android:background="@color/colorPrimary" />


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignTop="@+id/Headers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
