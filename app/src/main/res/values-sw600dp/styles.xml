<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="courseText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:cursorVisible">false</item>

    </style>

    <style name="GpaListView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="aboutTextStyle">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="DisplayViews">
        <item name="android:padding">22dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="loginViews">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainMenuView">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>


    </style>



</resources>
