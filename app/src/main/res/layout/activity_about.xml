<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.afridevelopers.cgpacalculator.About"
    android:background="@drawable/developed"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/aboutLogoWidth"
            android:layout_height="@dimen/aboutLogoHeight"
            android:layout_margin="10dp"
            android:background="@drawable/cropped"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/aboutTextStyle"
                android:layout_marginBottom="0dp"
                android:text="CGPA Calculator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/aboutTextStyle"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="36dp"
                android:text="Version 1.0"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/aboutTextStyle"
            android:layout_marginTop="20dp"
            android:text="@string/aboutText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/aboutTextStyle"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/rateApp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:text="Rate this App"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/aboutTextStyle"
            android:padding="20dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:text="@string/socialconnect"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="@dimen/socialIconLogoWidth"
            android:layout_height="@dimen/socialIconLogoHeight"
            android:id="@+id/facebook"
            android:background="@drawable/facebook"/>
        <ImageButton
            android:layout_width="@dimen/socialIconLogoWidth"
            android:layout_height="@dimen/socialIconLogoHeight"
            android:id="@+id/instagram"
            android:background="@drawable/instagram"/>
        <ImageButton
            android:layout_width="@dimen/socialIconLogoWidth"
            android:layout_height="@dimen/socialIconLogoHeight"
            android:id="@+id/whatsapp"
            android:background="@drawable/whatsapp"/>
        <ImageButton
            android:layout_width="@dimen/socialIconLogoWidth"
            android:layout_height="@dimen/socialIconLogoHeight"
            android:id="@+id/youtube"
            android:background="@drawable/youtube"/>



    </LinearLayout>


</LinearLayout>
